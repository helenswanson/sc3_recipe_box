<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Recipe Database</title>
    <link rel="stylesheet" href="styles.css">
  </head>

  <body>
    <% @recipe.each do |recipe_info| %>
      <h1>
      <%="#{recipe_info["name"]}"%><br/>
      </h1>
      <p>
      <strong>Description:</strong><br/>
      <%="#{recipe_info["description"]}"%><br/><br/>
      <strong>Instructions:</strong><br/>
      <%="#{recipe_info["instructions"]}"%><br/><br/>
      </p>
    <% end %>

    <p>
      <strong>Ingredients:</strong><br/>
      <ul>
        <% @ingredients.each do |ingredient| %>
          <li><%="#{ingredient["name"]}"%></li><br/>
        <% end %>
      </ul>
    </p>

    <br/>

    <a href="/">Back</a>
    <br/><br/>
  </body>
</html>
